<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/lib_category_main_item_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/category_ic_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="5dp"
        tools:src="@android:color/holo_blue_bright"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/category_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/lib_category_item_main_title"
        android:textSize="14dp"
        android:ellipsize="end"
        tools:text="音频"/>
</LinearLayout>
